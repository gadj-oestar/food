    {% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <h1>Liste des produits</h1>

    <table class="adminuser">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.title }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.description }}</td>
                    <td><img src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.title }}" width="50"></td>
                    <td>
                        <a href="{{ path('admin_edit_product', {id: product.id}) }}">Modifier</a>
                        <a href="{{ path('admin_delete_product', {id: product.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_new_product') }}">Ajouter un nouveau produit</a>
{% endblock %}
