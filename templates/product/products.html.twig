{% extends 'base.html.twig' %}

{% block title %}Gestion des produits{% endblock %}

{% block body %}
    <h1>Gestion des produits</h1>

    <table class="adminuser">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Image</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.title }}</td>
                    <td><img src="{{ asset('uploads/' ~ product.image) }}" alt="{{ product.title }}" style="width: 50px;"></td>
                    <td>{{ product.price }}€</td>
                    <td>{{ product.description }}</td>
                    <td>
                        <a href="{{ path('admin_edit_product', {id: product.id}) }}">Modifier</a>
                        <a href="{{ path('admin_delete_product', {id: product.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
